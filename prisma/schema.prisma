// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String    @id @default(uuid())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    name      String
    phone     String
    password  String
    email     String    @unique
    address   Address?
    wishList  WishList?
}

model Address {
    id           String @id @default(uuid())
    street       String
    neighborhood String
    number       String
    city         String
    cep          String
    user         User   @relation(fields: [userId], references: [id])
    userId       String @unique
}

model Product {
    id          String     @id @default(uuid())
    name        String
    description String
    price       Float
    badge       String
    variants    Variant[]
    wishLists   WishList[]
}

model Variant {
    id            String         @id @default(uuid())
    product       Product        @relation(fields: [productId], references: [id])
    productId     String
    name          String
    variantValues VariantValue[]
}

model VariantValue {
    id        String  @id @default(uuid())
    variant   Variant @relation(fields: [variantId], references: [id])
    variantId String
    name      String
}

model WishList {
    id       String    @id @default(uuid())
    products Product[]
    user     User      @relation(fields: [userId], references: [id])
    userId   String    @unique
}
